<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/travelstory_background"
    android:orientation="vertical"
    tools:context="com.example.sophia.travelstory.Login.RegisterActivity">

    <EditText
        android:id="@+id/edt_name"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="75dp"
        android:layout_marginTop="150dp"
        android:drawableLeft="@drawable/ic_perm_identity_black_24dp"
        android:drawableStart="@drawable/ic_perm_identity_black_24dp"
        android:ems="10"
        android:hint="    Name"
        android:inputType="textEmailAddress"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edt_id"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:drawableLeft="@drawable/ic_person_black_24dp"
        android:drawableStart="@drawable/ic_person_black_24dp"
        android:ems="10"
        android:hint="    ID"
        android:inputType="textEmailAddress"
        app:layout_constraintLeft_toLeftOf="@+id/edt_name"
        app:layout_constraintTop_toBottomOf="@+id/edt_name" />


    <EditText
        android:id="@+id/edt_passwd"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:drawableLeft="@drawable/ic_lock_black_24dp"
        android:drawableStart="@drawable/ic_lock_black_24dp"
        android:ems="10"
        android:hint="    PassWord"
        android:inputType="textPassword"
        app:layout_constraintLeft_toLeftOf="@+id/edt_name"
        app:layout_constraintTop_toBottomOf="@+id/edt_id" />

    <EditText
        android:id="@+id/edt_passwd2"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:drawableLeft="@drawable/ic_lock_black_24dp"
        android:drawableStart="@drawable/ic_lock_black_24dp"
        android:ems="10"
        android:hint="    confirm"
        android:inputType="textPassword"
        app:layout_constraintLeft_toLeftOf="@+id/edt_name"
        app:layout_constraintTop_toBottomOf="@+id/edt_passwd" />

    <EditText
        android:id="@+id/edt_email"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:drawableLeft="@drawable/ic_email_black_24dp"
        android:drawableStart="@drawable/ic_email_black_24dp"
        android:ems="10"
        android:hint="    E-Mail"
        android:inputType="textEmailAddress"
        app:layout_constraintLeft_toLeftOf="@+id/edt_name"
        app:layout_constraintTop_toBottomOf="@+id/edt_passwd2" />

    <ImageButton
        android:id="@+id/btn_registeruser"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/travelstory_register_add"
        app:layout_constraintLeft_toLeftOf="@+id/edt_name"
        app:layout_constraintTop_toBottomOf="@+id/edt_email" />

</android.support.constraint.ConstraintLayout>