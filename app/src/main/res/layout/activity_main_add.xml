<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/travelstory_background"

    tools:context="com.example.sophia.travelstory.MainTravelAdd">


    <ImageView
        android:id="@+id/img_addphoto"
        android:layout_width="368dp"
        android:layout_height="220dp"
        android:layout_margin="16dp"
        android:src="@drawable/travelstory_main_addimg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/travelstory_main_addimg" />

    <TextView
        android:id="@+id/txt_addlocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="장소"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@+id/edt_location"
        app:layout_constraintTop_toBottomOf="@+id/img_addphoto" />

    <EditText
        android:id="@+id/edt_location"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="여행 장소"
        android:inputType="textPersonName"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_addlocation" />

    <TextView
        android:id="@+id/txt_addperiod"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="24dp"
        android:text="일정"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@+id/edt_location"
        app:layout_constraintTop_toBottomOf="@+id/edt_location" />

    <Button
        android:id="@+id/btn_datefrom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"

        android:layout_marginTop="8dp"
        android:background="#00ff0000"
        android:ems="10"
        android:gravity="center"
        android:hint="출발 날짜"
        android:inputType="textPersonName"
        android:textSize="15dp"
        app:layout_constraintLeft_toLeftOf="@+id/txt_addperiod"
        app:layout_constraintTop_toBottomOf="@+id/txt_addperiod" />

    <Button
        android:id="@+id/btn_dateto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="8dp"
        android:background="#00ff0000"
        android:ems="10"
        android:gravity="center"
        android:hint="도착 날짜"
        android:inputType="textPersonName"
        android:textSize="15dp"
        app:layout_constraintLeft_toLeftOf="@+id/txt_addperiod"
        app:layout_constraintTop_toBottomOf="@+id/btn_datefrom" />

    <TextView
        android:id="@+id/txt_datefrom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="부터"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_datefrom"
        app:layout_constraintLeft_toRightOf="@+id/btn_datefrom"
        app:layout_constraintTop_toTopOf="@+id/btn_datefrom" />

    <TextView
        android:id="@+id/txt_dateto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="까지"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_dateto"
        app:layout_constraintLeft_toRightOf="@+id/btn_dateto"
        app:layout_constraintTop_toTopOf="@+id/btn_dateto" />

    <Button
        android:id="@+id/btn_add_cancel"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="24dp"
        android:text="취소"
        app:layout_constraintLeft_toLeftOf="@+id/btn_dateto"
        app:layout_constraintTop_toBottomOf="@+id/btn_dateto" />

    <Button
        android:id="@+id/btn_add_ok"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:layout_marginTop="0dp"
        android:text="확인"
        app:layout_constraintRight_toRightOf="@+id/edt_location"
        app:layout_constraintTop_toTopOf="@+id/btn_add_cancel" />

</android.support.constraint.ConstraintLayout>
